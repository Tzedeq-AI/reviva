<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- App theme (used after splash) -->
    <style name="Base.Theme.Reviva" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Fallback splash for Android 11 and below -->
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="Theme.Reviva" parent="Base.Theme.Reviva" />

    <!-- Android 12+ system splash -->
    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/reviva_white</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.Reviva</item>
        <item name="windowSplashScreenAnimationDuration">1200</item>
    </style>

</resources>
