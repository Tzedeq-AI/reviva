<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- App theme (used after splash) -->
    <style name="Base.Theme.Reviva" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Clean app background after splash -->
        <item name="android:windowBackground">@color/screen_background</item>
    </style>

    <!-- Splash theme -->
    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">

        <!-- Fallback splash for Android 11 and below -->
        <item name="android:windowBackground">@drawable/splash_background</item>

        <!-- Android 12+ system splash -->
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/reviva</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.Reviva</item>

    </style>

</resources>
