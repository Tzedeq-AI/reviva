<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.Reviva" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Fallback splash for Android 11 and below -->
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!-- Android 12+ system splash -->
    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/reviva</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.Reviva</item>
        <item name="windowSplashScreenAnimationDuration">1200</item>
    </style>

</resources>
